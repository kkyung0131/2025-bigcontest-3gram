# Install lightgbm if missing
if (!requireNamespace("lightgbm", quietly = TRUE)) {
  install.packages(
    "lightgbm",
    repos = c("https://cran.r-project.org", "https://microsoft.github.io/lightgbm/R")
  )
}

# Install xgboost if missing
if (!requireNamespace("xgboost", quietly = TRUE)) {
  install.packages("xgboost", repos = "https://cran.r-project.org")
}